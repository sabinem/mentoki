
$.fn.embed.settings.sources = {
    youtube: {
        name: 'youtube',
        type: 'video',
        icon: 'video play',
        domain: 'youtube.com',
        url: '//www.youtube.com/embed/{id}',
        parameters: function (settings) {
            return {
                autohide: !settings.showUI,
                rel: 0,
                autoplay: settings.autoplay,
                color: settings.colors || undefined,
                hq: settings.hd,
                jsapi: settings.api,
                modestbranding: 1
            };
        }
    }
}